%define INSTANCEHOME ${client1:location}
instancehome $INSTANCEHOME
%define CLIENTHOME ${buildout:directory}\var\client1
clienthome $CLIENTHOME

products ${buildout:directory}\products
debug-mode off
security-policy-implementation C
verbose-security off
default-zpublisher-encoding utf-8

effective-user Administrator

zserver-threads 2

<environment>
    
zope_i18n_compile_mo_files true
PYTHON_EGG_CACHE ${buildout:directory}/var/.python-eggs
PYTHONHASHSEED random
#    TZ US/Eastern
#    zope_i18n_allowed_languages en es de fr
</environment>

<warnfilter>
  action default
  category exceptions.DeprecationWarning
</warnfilter>


<eventlog>
  
  level INFO
  <logfile>
    path ${buildout:directory}/var/client1/event.log
    level INFO
  </logfile>
</eventlog>

<logger access>
  level WARN
  <logfile>
    path ${buildout:directory}/var/client1/Z2.log
    format %(message)s
  </logfile>
</logger>





<zodb_db main>
    # Main database
    cache-size 10000
    
# Blob-enabled ZEOStorage database
    <zeoclient>
      blob-dir ${buildout:directory}/var/blobstorage
      shared-blob-dir on
      server 127.0.0.1:8100
      storage 1
      name zeostorage
      var ${client1:location}\var
      cache-size 128MB
      
      
      
      
      
      
    </zeoclient>
    mount-point /
</zodb_db>

<zodb_db temporary>
    # Temporary storage database (for sessions)
    <temporarystorage>
      name temporary storage for sessioning
    </temporarystorage>
    mount-point /temp_folder
    container-class Products.TemporaryFolder.TemporaryContainer
</zodb_db>

pid-filename ${buildout:directory}/var/client1/client1.pid
lock-filename ${buildout:directory}/var/client1/client1.lock
python-check-interval 1000
enable-product-installation off


