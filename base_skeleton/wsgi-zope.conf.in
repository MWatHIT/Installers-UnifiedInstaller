%define INSTANCEHOME ${plone:location}
instancehome $INSTANCEHOME
%define CLIENTHOME ${plone:clienthome}
clienthome $CLIENTHOME

products ${plone:products}
debug-mode ${plone:debug-mode}
security-policy-implementation C
verbose-security ${plone:verbose-security}
default-zpublisher-encoding utf-8

effective-user ${plone:effective-user}

zserver-threads 2

<environment>
${plone:environment-vars}    
</environment>

# TODO honor deprecation-warnings recipe option
<warnfilter>
  action default
  category exceptions.DeprecationWarning
</warnfilter>


<eventlog>
  
  level INFO
  <logfile>
    path ${plone:event-log}
    level INFO
  </logfile>
</eventlog>

<logger access>
  level WARN
  <logfile>
    path ${plone:z2-log}
    format %(message)s
  </logfile>
</logger>





<zodb_db main>
    # Main database
    cache-size 10000
    
# Blob-enabled ZEOStorage database
    <zeoclient>
      blob-dir ${plone:blob-storage}
      shared-blob-dir ${plone:shared-blob}
      server ${plone:zeo-address}
      storage 1
      name zeostorage
      var ${plone:location}\var
      cache-size 128MB
      
      
      
      
      
      
    </zeoclient>
    mount-point /
</zodb_db>

<zodb_db temporary>
    # Temporary storage database (for sessions)
    <temporarystorage>
      name temporary storage for sessioning
    </temporarystorage>
    mount-point /temp_folder
    container-class Products.TemporaryFolder.TemporaryContainer
</zodb_db>

pid-filename ${plone:pid-file}
lock-filename ${plone:lock-file}
python-check-interval 1000
enable-product-installation off


