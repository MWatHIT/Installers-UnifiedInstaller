<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <fastCgi>
      <!-- Can't use environment variables in monitorChangesTo -->
      <!-- TODO getting an error on first page load but works fine on
           refresh and thereafter -->
      <application
          fullPath="{APPL_PHYSICAL_PATH}\Scripts\python.exe"
          arguments="-u &quot;{APPL_PHYSICAL_PATH}\Scripts\iiswsgi-script.py&quot; -vv -c &quot;{APPL_PHYSICAL_PATH}\TODO.ini&quot;"
          monitorChangesTo="{APPL_PHYSICAL_PATH}\TODO.ini"
          maxInstances="__webpi_clients_parameter__" />
    </fastCgi>
    <security>
      <requestFiltering allowDoubleEscaping="true">
        <!-- allow ++namespace++ URLs -->
      </requestFiltering>
    </security>
    <handlers>
      <add name="plone.app"
	   scriptProcessor="{APPL_PHYSICAL_PATH}\Scripts\python.exe|-u &quot;{APPL_PHYSICAL_PATH}\Scripts\iiswsgi-script.py&quot; -vv -c &quot;{APPL_PHYSICAL_PATH}\TODO.ini&quot;"
	   path="*" verb="*"
	   modules="FastCgiModule"/>
    </handlers>
  </system.webServer>
</configuration>
