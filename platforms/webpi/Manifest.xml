      path="%IIS_BIN%\appcmd.exe set config -section:system.webServer/fastCgi /+&quot;[fullPath='%SystemDrive%\Python27\python.exe',arguments='-u %APPL_PHYSICAL_PATH%\zinstance\bin\iisfcgi-script.py -c %APPL_PHYSICAL_PATH%\zinstance
